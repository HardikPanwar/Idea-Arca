---
const { id, title, description, link, tags, section } = Astro.props;
---

<div class="card">
  <h1>{id}</h1>
  <h2>
    {title}
  </h2>
  <div class="tags">
    {
      tags.length > 0 &&
        tags.map((ele) => {
          return <span>{ele}</span>;
        })
    }
  </div>
  <a
    href={`${section}/${id}`}
    class="description"
    title="click to view in detail">{description}</a
  >
  <a class="btn" href={link} target="_blank">Link</a>
</div>

<style lang="scss">
  .card {
    width: 20rem;
    // height: 20rem;
    background: transparent;
    backdrop-filter: blur(0.15rem);
    border: 1px dashed var(--primary-3);
    border-radius: 0.5rem;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    transition:all 0.15s ease-in-out;
    &:hover{
      border: 1px solid var(--primary-3);
      box-shadow: 0 1px 1px 1px var(--primary-2);
    }

    h1 {
      font-size: 2rem;
      position: absolute;
      top: -1.5rem;
      right: 0;
      overflow: hidden;
      display: inline-block;
      width: 2ch;
      font-weight: 100;
      text-align: right;
      // text-overflow: ellipsis;
    }
    h2 {
      font-size: 1.1rem;
      font-weight: 800;
      text-transform: capitalize;
      text-align: center;
      height: 2ch;
      wi: 100%;
      overflow: hidden;
      // text-overflow: ellipsis;
    }
    .tags {
      display: flex;
      overflow: hidden;
      // flex-wrap: wrap;
      gap: 0.3rem;
      span {
        padding: 0.2rem 0.5rem;
        border: 0.1px solid var(--primary-4);
        border-radius: 0.3rem;
        color: var(--primary-4);
        font-weight: 100;
        height: 3ch;
        // text-overflow: ellipsis;
      }
    }
    p,
    .description {
      text-decoration: none;
      width: 100%;
      height: 9ch;
      overflow: hidden;
      color: var(--primary-4);
      line-height: 1.5;
      font-weight: 100;
      // text-overflow: ellipsis;
    }
    .btn {
      padding: 0.5rem 0.7rem;
      text-align: center;
    }
  }
</style>
